@model DadosDoUsuario
@{
    ViewData["Title"] = "Cadastro de Usuário";
}
<br/>
<div class="jumbotron">
  <h1 class="display-3">Olá, gamer!</h1>
  <p class="lead">Em breve, após o cadastro, você poderar gerênciar emprestimos de seus jogos! É rapidinho!</p>
  <hr class="my-4">

  <form asp-controller="Cadastro" asp-action="Cadastrar" method="POST">
  <fieldset>
    <legend>Cadastre seus dados</legend>

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" type="text" class="form-control"/>
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="Email"></label>
      <input asp-for="Email" type="email" class="form-control"/>
      <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="RepetirEmail"></label>
      <input asp-for="RepetirEmail" type="email" class="form-control"/>
      <span asp-validation-for="RepetirEmail" class="text-danger"></span>
    </div>

     <div class="form-group">
      <label asp-for="Senha"></label>
      <input asp-for="Senha" type="password" class="form-control"/>
      <span asp-validation-for="Senha" class="text-danger"></span>
    </div>

    <div class="form-group">
      <label asp-for="RepetirSenha"></label>
      <input asp-for="RepetirSenha" type="password" class="form-control"/>
      <span asp-validation-for="RepetirSenha" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataDeNascimento"></label>
        <input asp-for="DataDeNascimento" type="date" class="form-control"/>
        <span asp-validation-for="DataDeNascimento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Endereco"></label>
        <input asp-for="Endereco" type="text" class="form-control"/>
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Numero"></label>
        <input asp-for="Numero" type="number" class="form-control"/>
        <span asp-validation-for="Numero" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Complemento"></label>
        <input asp-for="Complemento" type="text" class="form-control"/>
        <span asp-validation-for="Complemento" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cep"></label>
        <input asp-for="Cep" type="text" class="form-control"/>
        <span asp-validation-for="Cep" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Cidade"></label>
        <input asp-for="Cidade" type="text" class="form-control"/>
        <span asp-validation-for="Cidade" class="text-danger"></span>
    </div>

    @{
        ViewBag.Lista = new List<SelectListItem> {
            new SelectListItem {Value = null, Text = "Selecione"},
            new SelectListItem { Value = "AC", Text = "Acre" },
            new SelectListItem { Value = "SP", Text = "São Paulo" },
            new SelectListItem { Value = "SE", Text = "Sergipe" }
        }; 
    }
     <div class="form-group">
        <label asp-for="UnidadeFederativa"></label>
        <select asp-for="UnidadeFederativa" asp-items="ViewBag.Lista" class="form-control"></select>
        <span asp-validation-for="UnidadeFederativa" class="text-danger"></span>
    </div>
   
      <button type="submit" class="btn btn-primary">Criar Conta</button>
  </fieldset>
</form>
</div>